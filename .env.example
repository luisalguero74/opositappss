# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Local: postgresql://usuario:password@localhost:5432/nombre_bd
# Supabase: postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres
DATABASE_URL="postgresql://usuario:password@localhost:5432/opositapp"

# ============================================
# NEXTAUTH (Authentication)
# ============================================
# Genera con: openssl rand -base64 32
NEXTAUTH_SECRET="genera-un-secret-aleatorio-seguro"
# Producción: https://tudominio.com
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# EMAIL VERIFICATION (safe enforcement)
# ============================================
# Disabled by default.
# When enabled, it ONLY blocks logins for accounts created on/after the cutoff date AND with emailVerified = null.
ENFORCE_EMAIL_VERIFICATION=false
# ISO date/time (recommended). Example: 2026-01-12T00:00:00.000Z
EMAIL_VERIFICATION_ENFORCE_AFTER=2026-01-12T00:00:00.000Z

# ============================================
# EMAIL (Notificaciones)
# ============================================
# Recomendado (sin hosting): RESEND
# 1) Verifica tu dominio en Resend (opositapp.site)
# 2) Añade los DNS (SPF/DKIM/DMARC) que te indique Resend
# 3) Configura estas variables en Vercel
RESEND_API_KEY="re_..."
EMAIL_FROM='"opositAPPSS" <no-reply@opositapp.site>'
# Opcional: destinatario de respuestas
# EMAIL_REPLY_TO='soporte@opositapp.site'

# Alternativa (si algún día usas SMTP propio)
# SMTP_HOST=smtp.tudominio.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=no-reply@opositapp.site
# SMTP_PASS=tu_password

# Legacy (Gmail). Evitar en producción.
# EMAIL_USER=tucorreo@gmail.com
# EMAIL_PASS="xxxx-xxxx-xxxx-xxxx"

# ============================================
# LIVEKIT (Aulas Virtuales)
# ============================================
LIVEKIT_URL=wss://tu-proyecto.livekit.cloud
LIVEKIT_API_KEY=tu-api-key
LIVEKIT_API_SECRET=tu-api-secret

# ============================================
# STRIPE (Pagos)
# ============================================
# Dashboard: https://dashboard.stripe.com/apikeys
# IMPORTANTE: Usar keys de TEST hasta verificar funcionamiento
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta_aqui
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_tu_clave_publica_aqui
# Webhook secret (configurar en Stripe después de deployment)
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret_aqui

# ============================================
# GROQ AI (Asistente de Estudio)
# ============================================
# Obtener gratis en: https://console.groq.com
GROQ_API_KEY=gsk_tu_api_key_aqui

# ============================================
# GOOGLE ADSENSE
# ============================================
# Contenido EXACTO de ads.txt (AdSense → Sites → ads.txt)
# Se sirve en /ads.txt
ADSENSE_ADS_TXT=""
